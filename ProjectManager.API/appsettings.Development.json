{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=ProjectManagerDb_Dev;Username=postgres;Password=postgres;Include Error Detail=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "JWT": {
    "SecretKey": "development-secret-jwt-key-minimum-32-characters-long-for-testing",
    "Issuer": "ProjectManagerAPI",
    "Audience": "ProjectManagerClient",
    "ExpirationMinutes": 2880
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "http://localhost:3000",
      "http://localhost:8080",
      "http://127.0.0.1:5173",
      "http://127.0.0.1:3000"
    ]
  },
  "FileUpload": {
    "MaxSizeInMB": 10,
    "AllowedExtensions": [
      ".jpg",
      ".jpeg",
      ".png",
      ".gif",
      ".pdf",
      ".doc",
      ".docx",
      ".xls",
      ".xlsx",
      ".txt",
      ".zip"
    ],
    "StoragePath": "wwwroot/uploads",
    "AvatarPath": "wwwroot/avatars"
  },
  "ApplicationSettings": {
    "MaxLoginAttempts": 10,
    "LockoutDurationMinutes": 5,
    "PasswordExpirationDays": 0,
    "SessionTimeoutMinutes": 120,
    "EnableEmailVerification": false,
    "EnableTwoFactorAuth": false
  },
  "DetailedErrors": true,
  "AllowedHosts": "*"
}
